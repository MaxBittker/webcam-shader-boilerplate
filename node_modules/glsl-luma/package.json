{
  "name": "glsl-luma",
  "version": "1.0.1",
  "description": "Get the luma (brightness) of an RGB color in GLSL. Useful for converting images to greyscale",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "test": "cd example && beefy index.js --open",
    "bundle": "browserify example/index.js > bundle.js"
  },
  "browserify": {
    "transform": [
      "glslify"
    ]
  },
  "author": "Hugh Kennedy <hughskennedy@gmail.com> (http://hughsk.io/)",
  "dependencies": {},
  "devDependencies": {
    "a-big-triangle": "0.0.0",
    "gl-context": "^0.1.0",
    "gl-now": "^1.3.1",
    "gl-texture2d": "^1.0.1",
    "glslify": "^1.4.0",
    "lena": "^1.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/hughsk/glsl-luma.git"
  },
  "keywords": [
    "glsl",
    "glslify",
    "grayscale",
    "greyscale",
    "luma",
    "brightness"
  ],
  "homepage": "https://github.com/hughsk/glsl-luma",
  "bugs": {
    "url": "https://github.com/hughsk/glsl-luma/issues"
  },
  "directories": {
    "example": "example"
  }
